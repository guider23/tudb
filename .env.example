# Database Provider Selection
# Options: "local" | "supabase" | "neon" | "railway" | "rds"
DB_PROVIDER=local

# Local Postgres Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tudb

# Supabase Configuration
SUPABASE_DB_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:6543/postgres
SUPABASE_ANON_KEY=your_supabase_anon_key

# Neon Configuration
NEON_DATABASE_URL=postgresql://[user]:[password]@[endpoint].neon.tech/[dbname]?sslmode=require

# Railway Configuration
RAILWAY_DATABASE_URL=postgresql://postgres:[password]@[region].railway.app:[port]/railway

# AWS RDS Configuration
RDS_DATABASE_URL=postgresql://[user]:[password]@[endpoint].rds.amazonaws.com:5432/[dbname]

# Database SSL Configuration
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Application Configuration
PORT=3000
MCP_TOOL_SERVER_PORT=3001
NODE_ENV=development

# Security Configuration
API_KEY=your_secure_api_key_here
READ_ONLY=true
ADMIN_OVERRIDE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
